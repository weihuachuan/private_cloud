<script src="https://cdn.bootcss.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<style type="text/css">
  
#web_bg{
  position:fixed;
  top: 0;
  left: 0;
  width:100%;
  height:100%;
  min-width: 1000px;
  z-index:-10;
  zoom: 1;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  -webkit-background-size: cover;
  -o-background-size: cover;
  background-position: center 0;
}

</style>
<title></title>
</head>
<body id="web_bg" style="background-image: url(img/xiaomai.jpg);">

<div class="panel" style=" background-color:rgba(255,255,255,0);" >
  <div class="panel-body">
    <div class="row">
  <div class="col-md-12" ></div>
   <div class="col-md-12"></div>
   <p style="text-align: center; font-size: 25px;"> 麦博士网盘 </p>
  <div class="col-md-4"></div>
  <div class="col-md-4" style="border-radius: 4px;border: 1px solid rgba(0,0,0,.1); margin-top:50px; margin-bottom:50px; padding-top:35px;padding-bottom: 50px;   " >
  	<p style="text-align: center; font-size: 18px;"> 注册 </p>

<form  action="/registerPost" method="post" >
  <div class="form-group">
    <label for="exampleInputEmail1">用户名</label>
    <input type="username" class="form-control" id="exampleInputEmail1"  name="userName" placeholder="请输入您的用户名" onblur="checkUsername()"><span id="usernamespan"></span>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">密码</label>
    <input type="password" class="form-control" id="exampleInputPassword1"  name="password" placeholder="请输入您的密码" onblur="checkPassword()"><span id="passwordspan" ></span>
    {{status}}
  </div>
  
  <button type="submit" class="btn btn-default" onsubmit="return subForm()">注册</button>
   <a href="/login" style="margin-left: 30px;">已有账户，我要登陆</a>
</form>
  </div>
  <div class="col-md-4"></div>
</div>
  </div>
</div>


</div>
</div>

    <script type="text/javascript">
			
			 function checkUsername(){
			 	var username = document.getElementById('exampleInputEmail1').value;
			 	var usernameReg = /^[a-zA-Z0-9]{6,12}$/;
			 	
			 	var usernamespan = document.getElementById("usernamespan");
			 	
			 	if(!usernameReg.test(username)){
			 		usernamespan.style.color="red";
			 		usernamespan.innerHTML="× 用户名格式不正确";
			 		return false;
			 	}else{
			 		usernamespan.style.color="green";
			 		usernamespan.innerHTML="√";
			 		return true;
			 	}
			 	
			 }
			 
			 function checkPassword(){
			 	var password = document.getElementById('exampleInputPassword1').value;
			 	var passwordReg = /^[a-zA-Z0-9]{6,12}$/;
			 	var passwordspan = document.getElementById("passwordspan");
			 	
			 	if(!passwordReg.test(password)){
			 		passwordspan.style.color="red";
			 		passwordspan.innerHTML="× 密码格式不正确";
			 		return false;
			 	}else{
			 		passwordspan.style.color="green";
			 		passwordspan.innerHTML="√";
			 		return true;
			 	}
			 }

       function subForm(){
			 	
			 	if(checkUsername() && checkPassword()){
			 		return true;
			 	}else{
			 		return false;
			 	}
			 }
       </script>


</body>
</html>